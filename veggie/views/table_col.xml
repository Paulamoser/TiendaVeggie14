<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

        <template id="roadmap_report_table_cols">

            <div class="d-flex" style="font-size:18px !important;  display: flex; -webkit-flex-wrap: wrap; -ms-flex-wrap:  wrap;  flex-wrap: wrap;align-content: flex-start; overflow: visible; padding-left:0px;" >
                <div t-foreach="total_users['congelados']" t-as="cogelados" style="font-size:18px !important; solid #000;font-size: 3.75vw; "><!--min-width: 300px; -->
                    <!-- el que sigue es el div de categoria y sus productos-->
                    <div class="col-sm-6" style="float:auto;    border-right: 1px solid black; padding-left:0px; "><!--min-width: 240px; -->
                        <!--encabezado categoria-->
                        <div display="inline-block">
                            <div class="float-left" style="padding-left: 1px; padding-right:1px;nowrap " witdh="90%">
                                    <span t-esc="cogelados['categ']" style="font-size: 18px;font-weight:bold;font-size: 3.75vw;"/>
                            </div>
                            <div style="font-size:18px !important;padding-right:2px; text-align:right">
                                    <span style="font-size: 18px;font-size: 3.75vw;  padding-left: 0; font-weight:bold;" t-esc="cogelados['total_products']"/>
                            </div>
                        </div>
                        <!--fin categoria-->
                        <t t-foreach="cogelados['data']" t-as="products" >
                        <!--recorro productos-->
                            <div display="inline-block">
                                <div class="float-left" style="padding-left: 1px; padding-right:2px;">
                                        <span style="font-size: 18px;font-size: 3.75vw;" t-esc="products['product_name']"/>
                                </div>
                                <div style="font-size:18px !important;padding-right:2px; text-align:right">
                                        <span style="font-size: 18px;font-size: 3.75vw;" t-esc="products['quantity_product']"/>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>

            

