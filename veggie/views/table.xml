<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>

        <template id="roadmap_report_table">

            <div class="row mt32 mb32" style="font-size:18px !important;">
                <div t-foreach="total_users['congelados']" t-as="cogelados" style="font-size:18px !important; solid #000;"><!--border-bottom:1px -->
                    <!-- el que sigue es el div de categoria y sus productos-->
                    <div class="col-sm-6" style="float-left;    display: flex; -webkit-flex-wrap: wrap; -ms-flex-wrap:  wrap;  flex-wrap: wrap; min-width: 300px; border-right: 1px solid black;  ">
                        <!--encabezado categoria-->
                        <div class="float-left" style="padding-left: 5px; padding-right:5px;">
                                <span t-esc="cogelados['categ']" style="font-size: 18px;font-weight:bold;"/>
                        </div>
                        <div style="font-size:18px !important;padding-right:5px; text-align:right">
                                <span style="font-size: 18px;  padding-left: 0; font-weight:bold;" t-esc="cogelados['total_products']"/>
                        </div>
                        <!--fin categoria-->
                        <!--i  contador para mandar nuevo row despues del 4to prod-->
                        <t t-set="i" t-value="1"/>
                        <t t-foreach="cogelados['data']" t-as="products" >
                        <!--recorro productos-->
                            <t t-set="i" t-value="i+1"/>
                            <div class="float-left" style="padding-left: 5px; padding-right:5px;">
                                    <span style="font-size: 18px;" t-esc="products['product_name']"/>
                            </div>
                            <div style="font-size:18px !important;padding-right:5px; text-align:right">
                                    <!--<span style="font-size: 18px;  padding-left: 0; font-weight:bold;" t-esc="cogelados['total_products']"/>-->
                                    <span style="font-size: 18px;" t-esc="products['quantity_product']"/>
                            </div>
                            <t t-if="i==4">
                                <!--nuevo roww-->
                                <div class="w-100"></div>
                            </t>
                        </t>


                    </div>
                </div>
            </div>

            

